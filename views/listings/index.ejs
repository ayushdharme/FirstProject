<style>
    .filters{
        display: flex;
        flex-wrap: wrap;
        text-align: center;
        margin-top:2rem;
    }
    .filter{
        margin-right:2rem;
        opacity:0.8;
    }
    .filter:hover{
        opacity:1;
        cursor: pointer;
    }
    .tax-toggle{
        display: flex;
        align-items: center;
        border:0.2px solid black;
        border-radius: 1rem;
        height:3rem;
        padding:0 1rem 0 1rem;
        margin-left: 3rem;
    }
    .tax-info{
        display: none;
    }
</style>
<% layout("/layouts/boilerplate") -%>

    <!-- <form method="GET" action="/listing/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="filters">
        <div class="filter">
            <i class="fa-solid fa-fire fa-lg"></i>
            <p>Trending</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-bed fa-lg"></i>
            <p>Rooms</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain-city fa-lg"></i>
            <p>Iconic Cities</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain fa-lg"></i>
            <p>Mountain</p>
        </div>

        <div class="filter">
            <i class="fa-brands fa-fort-awesome fa-lg"></i>
            <p>Castles</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-person-swimming fa-flip-horizontal fa-lg"></i>
            <p>Amazing Pools</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-cow fa-lg"></i>
            <p>Farms</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-campground fa-lg"></i>
            <p>Camping</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-snowflake fa-lg"></i>
            <p>Arctic</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">Display total after Taxes</label>
            </div>
        </div>
    </div>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">

        <% for (let item of allListings) { %>

        <a href="/listing/<%=item._id%>" class="listing-link">

            <div class="card col mt-3 listing-card">

                <img src="<%= item.image %>" class="card-img-top" alt="listing_img" style="height: 18rem;">
                <div class="card-img-overlay"></div>

                <div class="card-body">
                    <p class="card-text">
                        <b><%= item.title %></b>
                        <br>
                        â‚¹ <%= item.price.toLocaleString("en-IN") %> /Night
                        <i class="tax-info"> &nbsp; &nbsp; +18% GST </i>
                    </p>

                </div>
            </div>
        </a>
    
        <% } %>
    </div>

<script> 

    let btn = document.getElementById("switchCheckReverse");

    btn.addEventListener("click",()=>{
        let taxinfo = document.getElementsByClassName("tax-info");
        
        for(tax of taxinfo){
            if(tax.style.display != "inline"){
                tax.style.display = "inline"
            }else{
                tax.style.display = "none";
            }
        }
    })
    
</script>
